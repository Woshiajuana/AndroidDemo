<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owulia.makekotlin">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.WebViewActivity">
        </activity>
        <activity android:name=".ui.activity.GuidePageActivity"></activity>
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:theme="@style/WelcomeTheme">
        </activity>
        <activity android:name=".ui.activity.UserForgetActivity" />
        <activity android:name=".ui.activity.UserRegisterActivity" >
        </activity>
        <activity android:name=".ui.activity.UserLoginActivity" />
        <activity android:name=".ui.activity.UserAccountActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MainActivity"></activity>
    </application>

</manifest>