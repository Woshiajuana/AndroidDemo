<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owulia.makekotlin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/WelcomeTheme"
            android:name=".ui.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.UserForgetActivity"/>
        <activity android:name=".ui.activity.UserRegisterActivity"/>
        <activity android:name=".ui.activity.UserLoginActivity" />
        <activity android:name=".ui.activity.UserAccountActivity" />
        <activity android:name=".ui.activity.MainActivity" />
    </application>

</manifest>