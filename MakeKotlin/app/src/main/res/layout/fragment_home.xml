<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.fragment.HomeFragment">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.owulia.makekotlin.widget.WowCarouselView
            android:id="@+id/vCarousel"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:background="#f2f2f2"
            android:layout_height="140dp"/>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/layer_notice_tip_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/ic_notice_tip"
                android:layout_width="73dp"
                android:layout_height="16dp"/>

            <View
                android:background="@color/colorBorder"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:layout_width="1px"
                android:layout_height="20dp"/>

            <ViewFlipper
                android:inAnimation="@anim/anim_down_in"
                android:outAnimation="@anim/anim_up_out"
                android:flipInterval="3000"
                android:autoStart="true"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="哈哈哈0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="哈哈哈1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="哈哈哈2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ViewFlipper>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/style_home_entry_item">
                <ImageView
                    android:src="@mipmap/ic_h_entry_kplus"
                    style="@style/style_home_entry_item_img"/>
                <TextView
                    android:text="@string/string_plus"
                    style="@style/style_home_entry_item_text"/>
            </LinearLayout>
            <LinearLayout
                style="@style/style_home_entry_item">
                <ImageView
                    android:src="@mipmap/ic_h_entry_yqmy"
                    style="@style/style_home_entry_item_img"/>
                <TextView
                    android:text="@string/string_invitation"
                    style="@style/style_home_entry_item_text"/>
            </LinearLayout>
            <LinearLayout
                style="@style/style_home_entry_item">
                <ImageView
                    android:src="@mipmap/ic_h_entry_gdm"
                    style="@style/style_home_entry_item_img"/>
                <TextView
                    android:text="@string/string_fixed_code"
                    style="@style/style_home_entry_item_text"/>
            </LinearLayout>
            <LinearLayout
                style="@style/style_home_entry_item">
                <ImageView
                    android:src="@mipmap/ic_h_entry_smsy"
                    style="@style/style_home_entry_item_img"/>
                <TextView
                    android:text="@string/string_scan"
                    style="@style/style_home_entry_item_text"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_h_advert_xyk"
                    android:layout_marginEnd="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="信用卡办理"
                        android:textSize="14sp"
                        android:textColor="@color/colorText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="阴阳师联名卡"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorText9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="@color/colorBorder"
                android:layout_width="1px"
                android:layout_gravity="center"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_h_advert_jfdh"
                    android:layout_marginEnd="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="积分兑换"
                        android:textSize="14sp"
                        android:textColor="@color/colorText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="获1月精英权益"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorText9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_h_news"
                android:layout_marginEnd="8dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:text="码可资讯"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorText3"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="查看更多 >"
                android:textSize="14sp"
                android:textColor="@color/colorText9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/vNewsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>