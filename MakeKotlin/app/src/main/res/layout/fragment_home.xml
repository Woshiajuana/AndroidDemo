<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.fragment.HomeFragment">

    <com.owulia.makekotlin.widget.WowCarousel
        android:id="@+id/vCarousel"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:background="#f2f2f2"
        android:layout_height="140dp"/>


    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/layer_notice_tip_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_notice_tip"
            android:layout_width="73dp"
            android:layout_height="16dp"/>

        <View
            android:background="@color/colorBorder"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center"
            android:layout_width="1px"
            android:layout_height="20dp"/>

        <ViewFlipper
            android:inAnimation="@anim/anim_down_in"
            android:outAnimation="@anim/anim_up_out"
            android:flipInterval="3000"
            android:autoStart="true"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="哈哈哈0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="哈哈哈1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="哈哈哈2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ViewFlipper>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">
            <ImageView
                android:src="@mipmap/ic_h_entry_kplus"
                android:layout_width="55dp"
                android:layout_height="55dp"/>
            <TextView
                android:text="快+PLUS"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorText3"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>