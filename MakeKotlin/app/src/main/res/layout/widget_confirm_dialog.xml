<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_rectangle_white_radius8"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:text="标题"
        android:id="@+id/vTitle"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/vContent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:textColor="@color/colorText6"
        android:text="啊哈哈哈大十九大送到家阿斗阿迪；打卡盘丝洞看"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/colorBorder"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:text="取消"
            android:id="@+id/vCancelButton"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:textColor="@color/colorText9"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/colorBorder"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:text="确认"
            android:id="@+id/vSureButton"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:textColor="@color/colorMain"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>