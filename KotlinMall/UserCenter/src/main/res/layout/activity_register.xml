<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterActivity">

    <com.owulia.base.widgets.HeaderBar
        app:titleText="注册"
        app:rightText="登录"
        app:isShowBack="false"
        style="@style/MatchWrap"/>

    <EditText
        android:id="@+id/mMobileEt"
        android:hint="请输入手机号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/mVerifyCodeEt"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.owulia.base.widgets.VerifyButton
            android:id="@+id/mGetVerifyCodeBtn"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/mPwdEt"
        android:hint="请输入密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="请确认密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mRegisterBtn"
        android:layout_marginTop="30dp"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>