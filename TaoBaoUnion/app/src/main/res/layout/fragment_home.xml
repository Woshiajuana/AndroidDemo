<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.HomeFragment">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/logo"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/scan"
            android:src="@mipmap/scan_white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_toStartOf="@+id/scan"
            android:layout_toEndOf="@+id/logo"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:hint="@string/text_edit_hint"
            android:focusable="false"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/shape_edit_box_bg"
            android:layout_height="30dp"/>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mHomeIndicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mHomePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>