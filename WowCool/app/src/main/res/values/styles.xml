<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <!--        新 Activity 动画-->
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in_right</item>
        <!--        员 Activity 动画-->
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_in_left</item>
        <!--        退出时 退出的 Activity 执行的动画-->
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out_right</item>
        <!--        退出时进入的 Activity 执行的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_out_left</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    
    <style name="style_slide_menu_btn">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="style_slide_menu_btn_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
