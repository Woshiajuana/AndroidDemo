<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.HomeFragment">

    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/ic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:textColor="@color/colorPrompt"
        android:text="@string/string_slogan_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View style="@style/style_border"/>

        <LinearLayout
            style="@style/style_home_menu_wrap">
            <com.owulia.wowcool.widget.WowIconFontView
                style="@style/style_home_menu_icon"
                android:text="@string/string_website_icon"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/string_document_text" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right" />
        </LinearLayout>

        <View
            style="@style/style_border"
            android:layout_marginStart="@dimen/dimen_common_padding" />

        <LinearLayout
            style="@style/style_home_menu_wrap">
            <com.owulia.wowcool.widget.WowIconFontView
                style="@style/style_home_menu_icon"
                android:text="@string/string_author_icon"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/string_blog_text" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right" />
        </LinearLayout>

        <View
            style="@style/style_border"
            android:layout_marginStart="@dimen/dimen_common_padding" />

        <LinearLayout
            style="@style/style_home_menu_wrap">
            <com.owulia.wowcool.widget.WowIconFontView
                style="@style/style_home_menu_icon"
                android:text="@string/string_github_icon"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/string_github_text" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right" />
        </LinearLayout>


        <View style="@style/style_border"/>
    </LinearLayout>


</LinearLayout>